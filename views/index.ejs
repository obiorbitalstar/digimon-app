<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Digimons</title>

    <link rel="stylesheet" href="reset.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <header>
        <h1> Digimons </h1>
    </header>

    <main>
        <section id="digimon-container">
            <% digimons.forEach((item)=>{ %>
                <div class="digimons">
                    <h1> <%=item.name%> </h1>
                    <img  src="<%=item.img%>">
                    <h4 > level: <%= item.level%> </h4>
                    
                    <form action="/favorite" method="POST">
                        <label name="name"> <%= item.name %></label>
                    <button type="submit">Add to favorites</button>
                </form>

            </div>
            <% }); %>

        </section>
    </main>

    <footer></footer>
</body>

</html>